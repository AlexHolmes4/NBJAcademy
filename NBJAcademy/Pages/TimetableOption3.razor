@page "/timetable-option3"

<PageTitle>Timetable</PageTitle>

<HeadContent>
    <meta name="description" content="Check out the NBJ Academy class timetable for kids and adults. See our weekly schedule and class times." />

    <meta property="og:title" content="Timetable - NBJ Academy" />
    <meta property="og:description" content="View the NBJ Academy timetable for kids and adult Brazilian Jiu Jitsu classes in Cockburn Central." />
    <meta property="og:image" content="https://nbjacademy.com/images/nbjlogotransparant.png" />
    <meta property="og:url" content="https://nbjacademy.com/timetable" />

    <meta name="twitter:title" content="Timetable - NBJ Academy" />
    <meta name="twitter:description" content="See the NBJ Academy class schedule for kids and adults. Find your next BJJ class." />
    <meta name="twitter:image" content="https://nbjacademy.com/images/nbjlogotransparant.png" />
    <meta name="twitter:card" content="summary_large_image" />
</HeadContent>

<div class="timetable-container">
    <h1 class="timetable-title">Timetable</h1>
    
    <div class="timeline">
        <div class="timeline-item">
            <div class="timeline-marker monday"></div>
            <div class="timeline-content">
                <div class="day-badge">Monday</div>
                <div class="classes">
                    <div class="class-entry kids-class">
                        <div class="class-label">Kids</div>
                        <div class="class-time">6:30pm - 7:30pm</div>
                    </div>
                    <div class="class-entry adults-class">
                        <div class="class-label">Adults</div>
                        <div class="class-time">7:30pm - 8:30pm</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="timeline-item">
            <div class="timeline-marker tuesday"></div>
            <div class="timeline-content">
                <div class="day-badge">Tuesday</div>
                <div class="classes">
                    <div class="class-entry warriors-class">
                        <div class="class-label">Little Warriors<span class="age-info">Age: 3-5</span></div>
                        <div class="class-time">5:45pm - 6:15pm</div>
                    </div>
                    <div class="class-entry kids-class">
                        <div class="class-label">Kids</div>
                        <div class="class-time">6:15pm - 7:15pm</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="timeline-item">
            <div class="timeline-marker wednesday"></div>
            <div class="timeline-content">
                <div class="day-badge">Wednesday</div>
                <div class="classes">
                    <div class="class-entry kids-class">
                        <div class="class-label">Kids</div>
                        <div class="class-time">5:00pm - 6:00pm</div>
                    </div>
                    <div class="class-entry adults-class">
                        <div class="class-label">Adults</div>
                        <div class="class-time">6:00pm - 7:00pm</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="timeline-item">
            <div class="timeline-marker friday"></div>
            <div class="timeline-content">
                <div class="day-badge">Friday</div>
                <div class="classes">
                    <div class="class-entry warriors-class">
                        <div class="class-label">Little Warriors<span class="age-info">Age: 3-5</span></div>
                        <div class="class-time">5:45pm - 6:15pm</div>
                    </div>
                    <div class="class-entry adults-class">
                        <div class="class-label">Adults</div>
                        <div class="class-time">6:15pm - 7:15pm</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@page "/"

<PageTitle>Home</PageTitle>

<div class="carousel-container">
    <div id="nbjCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="nbjaddress.jpg" class="d-block w-100" alt="NBJ Address">
            </div>
            <div class="carousel-item">
                <img src="nbjtimetable.jpg" class="d-block w-100" alt="NBJ Timetable">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#nbjCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#nbjCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

